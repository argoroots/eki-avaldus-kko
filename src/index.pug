extends /_templates/main.pug

block content
    #form.container
        .row
            .col-sm-8.offset-sm-2
                h2.text-center.my-5= self.title
                +markdown(self.text)
                form
                    each i in self.form
                        +input(i)

        .row.my-5
            .col-sm-4.offset-sm-4
                button#submit.btn.btn-success.btn-lg.col= self.submit

    #uploading.d-none.container
        .row
            .col-sm-8.offset-sm-2.my-5.text-center
                +markdown(self.uploading)

    #done.d-none.container
        .row
            .col-sm-8.offset-sm-2.my-5.text-center
                +markdown(self.done)

block script
    script.
        window.entuApiUrl = '#{ self.env.ENTU_API_URL }'
        window.entuApiId = '#{ self.env.ENTU_API_ID }'
        window.entuApiUser = '#{ self.env.ENTU_API_USER }'
        window.entuApiKey = '#{ self.env.ENTU_API_KEY }'
